<LinearLayout android:background="@color/grey"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="fr.quentinneyraud.www.p4p3r0v3r.User.fragments.ProfileFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/email"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="email@email.com"
        android:id="@+id/profile_fragment_email" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/pseudo"
        android:textStyle="normal|bold"
        android:layout_marginTop="10dp" />


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Pseudo"
        android:id="@+id/profile_fragment_pseudo" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Current password"
        android:textStyle="normal|bold"
        android:layout_marginTop="20dp" />

    <android.support.design.widget.TextInputEditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="*********"
        android:id="@+id/old_password" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="New password"
        android:textStyle="normal|bold" />

    <android.support.design.widget.TextInputEditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint=""
        android:id="@+id/new_password" />

    <Button
        android:text="Validate"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:id="@+id/validate_profile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Enter your current password to set a new password"
        android:textStyle="normal|italic"
        android:layout_marginTop="10dp" />


</LinearLayout>
